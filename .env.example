# User Management API Environment Configuration
# Copy this file to .env and update the values for your environment

# Security - IMPORTANT: Change these in production!
SECRET_KEY=your-super-secret-key-here-change-this-in-production-at-least-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./data/user_management.db

# Security Settings
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your-encryption-key-here-32-bytes-exactly-for-fernet-encryption

# Admin Credentials - CHANGE IN PRODUCTION!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123!ChangeThisPassword

# IP Whitelisting (set to true in production)
ENABLE_IP_WHITELIST=false
WHITELISTED_IPS=127.0.0.1,localhost,192.168.1.0/24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Message Logging
BATCH_LOG_INTERVAL_MINUTES=10
MEMORY_THRESHOLD_MB=100

# Application Settings
APP_NAME=User Management API
APP_VERSION=1.0.0
DEBUG=false

# Redis Configuration (optional, for session storage and caching)
REDIS_URL=redis://localhost:6379/0

# Email Settings (optional, for future features)
SMTP_HOST=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=

# Production Settings
# Uncomment and configure for production deployment

# SSL/TLS
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# Database for production (PostgreSQL recommended)
# DATABASE_URL=postgresql://user:password@localhost:5432/user_management

# Logging
# LOG_LEVEL=info
# LOG_FILE=/app/logs/app.log

# Workers (for gunicorn)
# WORKERS=4
# MAX_REQUESTS=1000
# MAX_REQUESTS_JITTER=50

# Security Headers (handled by nginx in docker setup)
# CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com
# TRUSTED_HOSTS=yourdomain.com,api.yourdomain.com